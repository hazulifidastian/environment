}


# Dell Vostro hotkeys
bindsym XF86AudioLowerVolume exec /usr/bin/pactl set-sink-volume @DEFAULT_SINK@ -- -5%; exec /usr/bin/killall -USR1 i3status
bindsym XF86AudioRaiseVolume exec /usr/bin/pactl set-sink-volume @DEFAULT_SINK@ -- +5%; exec /usr/bin/killall -USR1 i3status
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle; exec /usr/bin/killall -USR1 i3status
bindsym XF86AudioPlay exec rhythmbox-client --play-pause
bindsym XF86AudioStop exec rhythmbox-client --pause
bindsym XF86AudioPrev exec rhythmbox-client --previous
bindsym XF86AudioNext exec rhythmbox-client --next

# sebelumnya, install xbacklight apt-get install xbacklight
bindsym XF86MonBrightnessUp exec /usr/bin/xbacklight -inc 10
bindsym XF86MonBrightnessDown exec /usr/bin/xbacklight -dec 10

