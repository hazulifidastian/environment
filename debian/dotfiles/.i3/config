# volume
set $volume Volume (+) up, (-) down, (m) toggle mute
mode "$volume" {

        bindsym plus exec /usr/bin/pactl set-sink-volume @DEFAULT_SINK@ -- +5%; exec /usr/bin/killall -USR1 i3status
        bindsym minus exec /usr/bin/pactl set-sink-volume @DEFAULT_SINK@ -- -5%; exec /usr/bin/killall -USR1 i3status
        bindsym m exec pactl set-sink-mute @DEFAULT_SINK@ toggle; exec /usr/bin/killall -USR1 i3status
        
        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+v mode "$volume"

# backlight
set $backlight Screen backlight (+) light, (-) dark
mode "$backlight" {

        bindsym plus exec /usr/bin/xbacklight -inc 10
        bindsym minus exec /usr/bin/xbacklight -dec 10

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+b mode "$backlight"

#exit
set $exit System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (p) poweroff
mode "$exit" {
        bindsym l exec --no-startup-id i3lock, mode "default"
        bindsym e exec --no-startup-id i3-msg exit, mode "default"
        bindsym s exec --no-startup-id gksudo pm-suspend, mode "default"
        bindsym h exec --no-startup-id gksudo pm-hibernate, mode "default"
        bindsym r exec --no-startup-id gksudo reboot, mode "default"
        bindsym p exec --no-startup-id gksudo poweroff, mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+Escape mode "$exit"

exec --no-startup-id ~/.i3/autostart.sh

exec --no-startup-id xinput set-prop "ETPS/2 Elantech Touchpad" "Synaptics Tap Time" 0
focus_follows_mouse no

# ganti keyboard ke dvorak programmer
exec --no-startup-id /usr/bin/setxkbmap -layout us -variant dvp
bindsym $mod+Shift+A exec --no-startup-id /usr/bin/setxkbmap -layout us -variant dvp

bindsym $mod+r exec pcmanfm --no-desktop

exec --no-startup-id i3-msg "workspace $ws1"

